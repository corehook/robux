PID_FILE="<%= @RAILS_ROOT %>/tmp/pids/clock.pid"

God.watch do |w|
  w.name = "clockwork_jobs"
  w.pid_file = PID_FILE

  w.interval = 10.seconds
  w.env      = { "RAILS_ENV" => "<%= @env %>" }
  w.dir      = "<%= @RAILS_ROOT %>"

  w.restart  = "kill -QUIT `cat #{PID_FILE}` && bundle exec clockwork clock.rb"
  w.start = "clockwork clock.rb"
  w.stop = "kill -QUIT `cat #{PID_FILE}`"

  w.keepalive
end